name = 'SAMtools'
version = "1.8"

homepage = 'http://www.htslib.org/'

description = """
 SAM Tools provide various utilities for manipulating alignments in the SAM
 format, including sorting, merging, indexing and generating alignments in
 a per-position format.
"""

toolchain = {'name': 'GCCcore', 'version': '6.4.0'}
toolchainopts = {'pic': True}

source_urls = ['https://github.com/samtools/%(namelower)s/releases/download/%(version)s']
sources = [SOURCELOWER_TAR_BZ2]
checksums = ['c942bc1d9b85fd1b05ea79c5afd2805d489cd36b2c2d8517462682a4d779be16']

builddependencies = [
    ('binutils', '2.28'),
]

dependencies = [
    ('bzip2', '1.0.6'),
    ('ncurses', '6.1'),
    ('XZ', '5.2.3'),
    ('zlib', '1.2.11'),
]

moduleclass = 'bio'
